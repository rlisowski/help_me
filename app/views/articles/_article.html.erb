<div id="<%= dom_id(article) %>" class="grid-x grid-padding-x article">
  <div class="article__actions">
    <%= link_to edit_article_path(article) do %>
      <i class="fi-pencil action action--primary"></i>
    <% end %>
    <%= link_to article, method: :delete, remote: true, data: { confirm: 'Are you sure?' } do %>
      <i class="fi-trash action action--danger"></i>
    <% end %>
  </div>

  <% article.article_translations.each do |translation| %>
    <div class="cell small-12 medium-6">
      <div class="card">
        <div class="card-divider">
          <%= MARKDOWN.render(translation.question).html_safe %>
        </div>
        <div class="card-section">
          <p><%= MARKDOWN.render(translation.answer).html_safe %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
